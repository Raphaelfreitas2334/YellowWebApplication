@using ControleDeContatos.Models;
@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação de apagar o Usuario";
}

<div class="text-center">
    <h3>Realmente deseja apagar o Alimento (@Model.Name)</h3>
</div>
<br />
<a class="btn btn-primary" role="button" asp-controller="usuario" asp-action="index">Cancelar exclução</a>
<br />
<br />
<a class="btn btn-secondary" role="button" asp-controller="usuario" asp-route-id="@Model.Id" asp-action="Apagar">Confirma exclução</a>