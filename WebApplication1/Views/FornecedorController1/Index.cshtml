@using ControleDeContatos.Models;
@model List<FornecedorModel>
@{
    ViewData["Title"] = "Página De Fornecedor";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class=" btn btn-primary" role="button" asp-controller="FornecedorController1" asp-action="Criar">Adicionar novo Fornecedor</a>
    </div>
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />

    <h1 class="display-4">Listagem de Fornecedor</h1>

    <table class="table table-Fornecedor" id="table-Fornecedor">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Cnpj</th>
                <th scope="col">Telefone</th>
                <th scope="col">Endereço</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (FornecedorModel fornecedor in Model)
                {
                    <tr>
                        <th scope="row">@fornecedor.Id</th>
                        <td>@fornecedor.Nome</td>
                        <td>@fornecedor.CNPJ</td>
                        <td>@fornecedor.Telefone</td>
                        <td>@fornecedor.Endereço</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@fornecedor.Id" asp-controller="FornecedorController1" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@fornecedor.Id" asp-controller="FornecedorController1" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>