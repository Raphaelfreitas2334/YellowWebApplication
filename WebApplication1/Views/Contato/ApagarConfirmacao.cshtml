@using ControleDeContatos.Models;
@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de apagar o contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o Alimento (@Model.Nome)</h3>
</div>
<br />
<a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="index">Cancelar exclução</a>
<br />
<br />
<a class="btn btn-secondary" role="button" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Apagar">Confirma exclução</a>